{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				<h1>Inscription
				</h1>

				{{ form_start(registrationForm) }}
				<fieldset>
					<legend>Mon identité </legend>
                        {{ form_row(registrationForm.lastname) }}
						{{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.email) }}
					
				</fieldset>

                <fieldset>
					<legend>Mes coordonnées </legend>
                        {{ form_row(registrationForm.adress) }}
						{{ form_row(registrationForm.zipcode) }}
                        {{ form_row(registrationForm.city) }}
					
				</fieldset>

				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary my-2">M'inscrire </button>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</section>

{% endblock %}
