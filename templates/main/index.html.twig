{% extends 'base.html.twig' %}

{% block title %}Main - E-commerce
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Ecommerce
				</h1>
				<p>
					Accueil
				</p>

			</div>

			{% for category in categories %}
				{% if category.parent== null %}

					<div class="col-12">
						<h2>
							{{category.name}}
						</h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card">
							<div class="card-body">
								<h3 class="card-title">
									{{category.name}}
								</h3>
						<a href=" {{path('categories_list', {slug: category.slug} )}}  ">Voir les produits </a>
								
							</div>
						</div>

					</div>

				{% endif %}
			{% endfor %}
		</section>
	</main>
{% endblock %}
